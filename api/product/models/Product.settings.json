    "avaliable": {
      "type": "boolean"
    },
    "vendor": {
      "default": "",
      "type": "string"
    },
    "gift_status": {
      "default": false,
      "type": "boolean"
    },
    "gift_text": {
      "default": "",
      "type": "text"
    },
    "name_rozetka": {
      "default": "",
      "type": "string"
    },
    "properties": {
      "collection": "property",
      "via": "products"
    },
    "comments_len": {
      "type": "integer"
    },
    "descJSON": {
      "type": "json"
    },
    "meta_title": {
      "type": "string"
    },
    "meta_decription": {
      "type": "text"
    },
    "meta_keywords": {
      "type": "string"
    },
    "priority": {
      "type": "integer"
    },
    "recommendations": {
      "default": [],
      "type": "json"
    },
    "promocodes": {
      "model": "promocode"
    }
