{
  "connection": "default",
  "collectionName": "product",
  "info": {
    "name": "product",
    "description": "Product model which describe main fields of product."
  },
  "options": {
    "timestamps": true
  },
  "attributes": {
    "name_ua": {
      "default": "",
      "type": "string"
    },
    "desc": {
      "default": "",
      "type": "text"
    },
    "photos": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "price": {
      "default": "",
      "type": "decimal"
    },
    "rating": {
      "default": "",
      "max": 5,
      "type": "float"
    },
    "category": {
      "model": "category",
      "via": "product"
    },
    "sex": {
      "default": "",
      "type": "enumeration",
      "enum": [
        "male",
        "female"
      ]
    },
    "discounts": {
      "model": "discount",
      "via": "product"
    },
    "order": {
      "model": "order",
      "via": "products"
    },
    "props": {
      "default": "",
      "type": "json"
    },
    "name_ru": {
      "default": "",
      "type": "string"
    },
    "name_en": {
      "default": "",
      "type": "string"
    },
    "amount": {
      "default": "",
      "type": "biginteger"
    },
    "rozetka_exp": {
      "default": false,
      "type": "boolean"
    },
    "comments": {
      "collection": "comment",
      "via": "product"
    }
  }
}
