{
  "routes": [
    {
      "method": "GET",
      "path": "/carts",
      "handler": "Cart.find",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/carts/count",
      "handler": "Cart.count",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "GET",
      "path": "/carts/:_id",
      "handler": "Cart.findOne",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "POST",
      "path": "/carts",
      "handler": "Cart.create",
      "config": {
        "policies": ["setOwner"]
      }
    },
    {
      "method": "PUT",
      "path": "/carts/:_id",
      "handler": "Cart.update",
      "config": {
        "policies": ["isOwner"]
      }
    },
    {
      "method": "DELETE",
      "path": "/carts/:_id",
      "handler": "Cart.destroy",
      "config": {
        "policies": ["isOwner"]
      }
    }
  ]
}
