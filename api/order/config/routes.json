{
  "routes": [
    {
      "method": "GET",
      "path": "/orders",
      "handler": "Order.find",
      "config": {
        "policies": [
          "isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/orders/count",
      "handler": "Order.count",
      "config": {
        "policies": [
          "isOwner"
        ]
      }
    },
    {
      "method": "GET",
      "path": "/orders/:_id",
      "handler": "Order.findOne",
      "config": {
        "policies": [
          "isOwner"
        ]
      }
    },
    {
      "method": "POST",
      "path": "/orders",
      "handler": "Order.create",
      "config": {
        "policies": [
          "setOwner"
        ]
      }
    },
    {
      "method": "PUT",
      "path": "/orders/:_id",
      "handler": "Order.update",
      "config": {
        "policies": [
          "isOwner"
        ]
      }
    },
    {
      "method": "DELETE",
      "path": "/orders/:_id",
      "handler": "Order.destroy",
      "config": {
        "policies": [
          "isOwner"
        ]
      }
    }
  ]
}